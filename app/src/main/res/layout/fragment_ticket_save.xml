<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_ticket"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.home.TicketSaveFragment">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_left_mono"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="36dp"
            android:layout_marginStart="16dp"/>

        <ImageView
            android:id="@+id/iv_ticket"
            android:layout_width="268dp"
            android:layout_height="442dp"
            app:layout_constraintTop_toBottomOf="@id/iv_back"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/img_welcome"/>

        <TextView
            android:id="@+id/tv_ticket_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="나만의 티켓을\n친구들에게 공유해보세요!"
            android:fontFamily="@font/pretendard_semibold"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:includeFontPadding="false"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="@+id/iv_ticket"
            app:layout_constraintStart_toStartOf="@+id/iv_ticket"
            app:layout_constraintTop_toBottomOf="@id/iv_ticket" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_ticket_save"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_marginHorizontal="22dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/bg_rectangle_12_black"
            android:text="이미지 저장하기"
            android:fontFamily="@font/pretendard_semibold"
            android:textSize="16dp"
            android:includeFontPadding="false"
            android:textColor="@color/white"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_ticket_share" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>